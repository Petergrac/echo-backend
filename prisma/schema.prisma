generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  user
  admin
}

enum NotificationType {
  FOLLOW          // When someone follows you
  LIKE            // When someone likes your post
  COMMENT         // When someone comments on your post
  MENTION         // When someone mentions you
  SHARE           // When someone shares your post
  MESSAGE         // When you receive a message
  SYSTEM          // System notifications
  ACHIEVEMENT     // When you earn an achievement
  RIPPLE         // New comment on your echo
  RIPPLE_REPLY   // Reply to your comment
  REECHO // When someone re-echoes your post
}

enum AuditAction {
  // Authentication & Authorization
  LOGIN_SUCCESS
  LOGIN_FAILED
  SIGNUP_SUCCESS
  SIGNUP_FAILED
  REFRESH_ROTATED
  REFRESH_REUSED_DETECTED
  TOKEN_ROTATED
  LOGOUT
  LOGOUT_ALL
  PASSWORD_RESET_REQUEST
  PASSWORD_RESET_COMPLETED
  EMAIL_VERIFICATION_SENT
  EMAIL_VERIFIED
  TOKEN_REVOKED_MANUALLY

  // Echo & Media
  ECHO_CREATED
  ECHO_DELETED

  // User Profile & Account
  PROFILE_VIEWED
  PROFILE_UPDATED
  ACCOUNT_DELETED

  // Rate Limiting & Throttling
  RATE_LIMIT_EXCEEDED
  RATE_LIMIT_BYPASS_ATTEMPT
  RATE_LIMIT_RESET

  // Bot Protection & Security
  BOT_DETECTED
  BOT_CHALLENGED
  BOT_BLOCKED
  SUSPICIOUS_ACTIVITY
  CSRF_ATTEMPT

  // IP & Geolocation
  IP_BLOCKED

  // System & Admin
  ADMIN_LOGIN
  ACCOUNT_DELETED_BY_ADMIN
}


model User {
  id            String         @id @default(cuid())
  email         String         @unique
  emailVerified Boolean        @default(false)
  username      String         @unique
  firstName     String
  lastName      String
  passwordHash  String
  bio           String?
  avatar        String? 
  role          UserType       @default(user) 
  avatarPublicId String?  
  location      String?
  website       String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt


  refreshTokens RefreshToken[]
  emailTokens   EmailToken[]   
  likes        Like[]
  ripples      Ripple[]
  reechoes     ReEcho[]
  bookmarks    Bookmark[]
  notifications     Notification[] @relation("UserNotifications") //? Notifications received by this user
  sentNotifications Notification[] @relation("NotificationFrom") //? Notification sent by this user
  echoes        Echo[]  
  followers     Follow[]      @relation("Followers")
  following     Follow[]      @relation("Following")
}

model RefreshToken {
  id          String    @id @default(cuid())
  tokenId     String    @unique 
  userId      String
  hashedToken String
  lastUsedAt  DateTime?
  createdAt   DateTime  @default(now())
  revoked     Boolean   @default(false)
  expiresAt   DateTime
  // ip & user agent
  ip          String?
  userAgent   String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([revoked])
}

model EmailToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String
  type      String // 'VERIFY' | 'RESET'
  createdAt DateTime @default(now())
  expiresAt DateTime
  used      Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type])
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    AuditAction// e.g., LOGIN_SUCCESS, LOGIN_FAILED, TOKEN_ROTATED, PASSWORD_RESET
  meta      Json?
  createdAt DateTime @default(now())
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  follower    User     @relation("Following", fields: [followerId], references: [id])
  following   User     @relation("Followers", fields: [followingId], references: [id])

  @@unique([followerId, followingId])
}


model Echo {
  id        String   @id @default(cuid())
  authorId  String
  content   String?            
  deleted   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sensitive Boolean  @default(false)

  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  media     Media[]
  
  // Engagement relations
  likes     Like[]
  ripples   Ripple[]
  reechoes  ReEcho[]
  bookmarks Bookmark[]
  echoHashtags EchoHashtag[]
  notifications Notification[]
  
  //TODO=> Enhanced indexes for engagement queries
  @@index([authorId, createdAt])
  @@index([createdAt, id])
  @@index([deleted])
  @@index([authorId, deleted, createdAt]) 
}
// TODO ========================== New Media model (one or many per echo)
model Media {
  id        String   @id @default(cuid())
  echoId    String
  url       String
  publicId  String?   //? cloudinary public id
  mimetype  String
  resourceType String?
  createdAt DateTime  @default(now())

  echo Echo @relation(fields: [echoId], references: [id], onDelete: Cascade)
  @@index([echoId])
}

//TODO ==================== ENGAGEMENT MODELS ====================
model Like {
  id        String   @id @default(cuid())
  userId    String
  echoId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  echo Echo @relation(fields: [echoId], references: [id], onDelete: Cascade)
  @@unique([userId, echoId])
  @@index([echoId, createdAt])
  @@index([userId, createdAt])
}

model Ripple {
  id        String   @id @default(cuid())
  content   String   @db.Text
  userId    String
  echoId    String
  parentId  String?  // For threaded replies
  deleted   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  echo   Echo   @relation(fields: [echoId], references: [id], onDelete: Cascade)
  parent Ripple? @relation("RippleReplies", fields: [parentId], references: [id])
  replies Ripple[] @relation("RippleReplies")
  notifications Notification[]

  @@index([echoId, createdAt])
  @@index([userId, createdAt])
  @@index([parentId])
}

model ReEcho {
  id        String   @id @default(cuid())
  userId    String
  echoId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  echo Echo @relation(fields: [echoId], references: [id], onDelete: Cascade)
  
  @@unique([userId, echoId])
  @@index([echoId, createdAt])
  @@index([userId, createdAt])
}

model Bookmark {
  id        String   @id @default(cuid())
  userId    String
  echoId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  echo Echo @relation(fields: [echoId], references: [id], onDelete: Cascade)

  @@unique([userId, echoId])
  @@index([userId, createdAt])
  @@index([echoId])
}

// TODO ==================== HASHTAG SYSTEM ====================
model Hashtag {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  echoHashtags EchoHashtag[]
  
  @@index([name])
  @@index([createdAt])
}
//* Join table for many-to-many relationship between Echo and Hashtag
model EchoHashtag {
  id        String   @id @default(cuid())
  echoId    String
  hashtagId String

  echo    Echo    @relation(fields: [echoId], references: [id], onDelete: Cascade)
  hashtag Hashtag @relation(fields: [hashtagId], references: [id], onDelete: Cascade)

  @@unique([echoId, hashtagId])
  @@index([hashtagId])
}


model Notification {
  id        String   @id @default(cuid())
  userId    String   //? user receiving the notification
  fromId    String   //? user who triggered the notification
  type      NotificationType
  echoId    String?  //? link to the echo that triggered notification
  rippleId  String?  //? for comment replies
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user   User @relation("UserNotifications", fields: [userId], references: [id])
  from   User @relation("NotificationFrom", fields: [fromId], references: [id])
  echo   Echo? @relation(fields: [echoId], references: [id])
  ripple Ripple? @relation(fields: [rippleId], references: [id])

  @@index([userId, read, createdAt])
  @@index([type, createdAt])
}