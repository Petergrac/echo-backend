generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  user
  admin
}

enum AuditAction {
  // Authentication & Authorization
  LOGIN_SUCCESS
  LOGIN_FAILED
  SIGNUP_SUCCESS
  SIGNUP_FAILED
  REFRESH_ROTATED
  REFRESH_REUSED_DETECTED
  TOKEN_ROTATED
  LOGOUT
  LOGOUT_ALL
  PASSWORD_RESET_REQUEST
  PASSWORD_RESET_COMPLETED
  EMAIL_VERIFICATION_SENT
  EMAIL_VERIFIED
  TOKEN_REVOKED_MANUALLY

  // User Profile & Account
  PROFILE_VIEWED
  PROFILE_UPDATED
  AVATAR_UPLOADED
  AVATAR_REMOVED
  ACCOUNT_DELETED

  // Content
  POST_CREATED
  POST_DELETED
  COMMENT_ADDED
  COMMENT_DELETED

  // Rate Limiting & Throttling
  RATE_LIMIT_EXCEEDED
  RATE_LIMIT_BYPASS_ATTEMPT
  RATE_LIMIT_RESET
  BRUTE_FORCE_ATTEMPT
  REQUEST_THROTTLED

  // Bot Protection & Security
  BOT_DETECTED
  BOT_CHALLENGED
  BOT_BLOCKED
  SUSPICIOUS_ACTIVITY
  MALICIOUS_PAYLOAD_DETECTED
  SQL_INJECTION_ATTEMPT
  XSS_ATTEMPT
  CSRF_ATTEMPT

  // IP & Geolocation
  IP_BLOCKED
  IP_ALLOWLISTED
  IP_BLACKLISTED
  GEO_BLOCKED
  UNUSUAL_LOCATION_DETECTED

  // API & Endpoint Security
  API_KEY_CREATED
  API_KEY_REVOKED
  API_KEY_ABUSED
  ENDPOINT_ABUSE_DETECTED
  UNUSUAL_ACTIVITY_PATTERN

  // System & Admin
  ADMIN_LOGIN
  ADMIN_ACTION
  CONFIG_UPDATED
  ACCOUNT_DELETED_BY_ADMIN
  SECURITY_SETTINGS_CHANGED
}


model User {
  id            String         @id @default(cuid())
  email         String         @unique
  emailVerified Boolean        @default(false)
  username      String         @unique
  passwordHash  String
  bio           String?
  avatar        String? 
  role          UserType       @default(user) 
  avatarPublicId String?  
  location      String?
  website       String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  refreshTokens RefreshToken[]
  emailTokens   EmailToken[]         
}

model RefreshToken {
  id          String    @id @default(cuid())
  tokenId     String    @unique 
  userId      String
  hashedToken String
  lastUsedAt  DateTime?
  createdAt   DateTime  @default(now())
  revoked     Boolean   @default(false)
  expiresAt   DateTime
  // ip & user agent
  ip          String?
  userAgent   String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([revoked])
}

model EmailToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String
  type      String // 'VERIFY' | 'RESET'
  createdAt DateTime @default(now())
  expiresAt DateTime
  used      Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type])
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    AuditAction// e.g., LOGIN_SUCCESS, LOGIN_FAILED, TOKEN_ROTATED, PASSWORD_RESET
  meta      Json?
  createdAt DateTime @default(now())
}
