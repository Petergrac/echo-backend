generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  username      String         @unique
  passwordHash  String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  refreshTokens RefreshToken[]
  emailTokens   EmailToken[]
}

model RefreshToken {
  id          String    @id @default(cuid())
  userId      String
  hashedToken String
  lastUsedAt  DateTime?
  createdAt   DateTime  @default(now())
  revoked     Boolean   @default(false)
  expiresAt   DateTime
  // ip & user agent
  ip          String?
  userAgent   String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([revoked])
}

model EmailToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String
  type      String // 'VERIFY' | 'RESET'
  createdAt DateTime @default(now())
  expiresAt DateTime
  used      Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type])
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String // e.g., LOGIN_SUCCESS, LOGIN_FAILED, TOKEN_ROTATED, PASSWORD_RESET
  meta      Json?
  createdAt DateTime @default(now())
}
